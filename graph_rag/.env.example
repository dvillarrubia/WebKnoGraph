# =============================================================================
# WebKnoGraph Graph-RAG Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# APP
DEBUG=false

# =============================================================================
# SUPABASE (pgvector)
# =============================================================================
SUPABASE_URL=http://localhost:54321
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
SUPABASE_DB_HOST=localhost
SUPABASE_DB_PORT=54322
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-postgres-password

# =============================================================================
# NEO4J
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# =============================================================================
# OPENAI
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# =============================================================================
# EMBEDDING MODEL
# =============================================================================
# Using local multilingual model optimized for Spanish
EMBEDDING_MODEL_NAME=intfloat/multilingual-e5-large
EMBEDDING_DIMENSION=1024
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# RAG SETTINGS
# =============================================================================
RAG_TOP_K_VECTORS=10
RAG_GRAPH_HOPS=2
RAG_MAX_CONTEXT_PAGES=15
RAG_MIN_SIMILARITY=0.5
RAG_CONTEXT_MAX_TOKENS=8000

# =============================================================================
# API
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8080
